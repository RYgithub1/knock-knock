.regis
  .regis__regisContent
    .regis__regisContent__regisContentHead
      %h2
        Edit #{resource_name.to_s.humanize}

    .regis__regisContent__regisContentBody
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource

        .regis__regisContent__regisContentBody__regisContentBodyFrom
          = f.label :name, class: "regisLabel"
          %br
          %span.ruleRegisterName (half-width English numbers or letters, more than 8 characters)
          %br
          %span.regisMust Mmandatory
          %br/
          = f.text_field :name, autofocus: true, class: "regisField", placeholder: "  8+ your nickname"

        .regis__regisContent__regisContentBody__regisContentBodyFrom
          = f.label :email, class: "regisLabel"
          %br
          %span.ruleRegisterName ("some English numbers or letters"@"some English numbers or letters")
          %br
          %span.regisMust Mmandatory
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "regisField", placeholder: "  any mail address"

        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}

        .regis__regisContent__regisContentBody__regisContentBodyFrom
          = f.label :current_password, class: "regisLabel"
          %br
          %span.regisMust Mmandatory
          %br
          %i (we need your current password to confirm your changes)
          %br/
          = f.password_field :current_password, autocomplete: "current-password", class: "regisField", placeholder: "  current password"

        .regis__regisContent__regisContentBody__regisContentBodyFrom
          = f.label :password, class: "regisLabel"
          %br
          %span.regisMust Optional
          %br
          %i (leave blank if you don't want to change it)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "regisField", placeholder: "  8+ new password"
          - if @minimum_password_length
            %br/
            %em
              -# = @minimum_password_length
              8 characters minimum

        .regis__regisContent__regisContentBody__regisContentBodyFrom
          = f.label :password_confirmation, class: "regisLabel"
          %br
          %span.regisMust Optional
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "regisField", placeholder: "  new one"

        .regis__regisContent__regisContentBody__regisContentBodySubmit
          = f.submit "Update", class: "regisContentBodySubmitBtn"

%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back
